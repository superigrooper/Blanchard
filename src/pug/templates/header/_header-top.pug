include ../../mixins/_link.pug

//- ----- Содержимое элементов навигации ----- ->
-
  var menuItems = {
    '#about': 'О нас', 
    '#gallery': 'Галерея', 
    '#catalog': 'Каталог', 
    '#events': 'События',
    '#': 'Издания', 
    '#projects':  'Проекты', 
    '#contacts': 'Контакты'
    }

.header__top
  .header__container.container.flex

    //- ---- Бургер кнопка ---- ->
    include ../../components/burger/_burger.pug

    //- ----- Логотип ----- ->
    a.header__logo(href="#" aria-lable="Логотип сайта")
      picture 
        source(srcset="./img/icons/common/logo-1024.svg" media="(max-width: 1200px)")
        source(srcset="./img/icons/common/logo-320.svg" media="(max-width: 576px)")
        img(src="./img/icons/common/logo.svg", alt="Логотип сайта")

    //- ----- Обёртка для навигации и логина, для дальнейшего адаптива ----- ->
    .header__nav-wrapper.flex
      nav.header__nav
        ul.header__items.flex
          each target, navItem in menuItems
            li.header__item

              //- ----- Миксин для сссылки ----- ->
              +link(navItem, target)(class='header__link')

      //- ----- Кнопка логин ----- ->
      a.header__login(href="" aria-label="Вход в личный кабинет")
